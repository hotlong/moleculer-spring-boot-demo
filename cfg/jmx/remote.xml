<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- LOCAL JMX SERVICE FOR MOLECULER -->
	<!-- REQUIRED DEPENDENCY: group: 'com.github.berkesa', name: 'moleculer-java-jmx', version: '1.0.1' -->
	<!-- URL: https://mvnrepository.com/artifact/com.github.berkesa/moleculer-java-jmx -->
	
	<bean id="jmx" class="services.moleculer.jmx.JmxService">
	
		<!-- Use remote (RMI) JMX connection -->	
		<property name="local" value="false" />

		<!-- Remote JMX server's URL -->
		<property name="url"   value="service:jmx:rmi:///jndi/rmi://127.0.0.1:7199/jmxrmi";

		<!-- Username used for authentication -->
		<property name="username"><null/></property>

		<!-- Password used for authentication -->
		<property name="password"><null/></property>

		<!-- Environment Map used for connecting the remote JMX server -->
		<property name="environment"><null/></property>
			
		<!-- Time between the MBean comparations in MILLISECONDS -->
		<property name="watchPeriod" value="5000" />

		<!-- Optional list of MBean observers -->
		<property name="objectWatchers">
			<set>
				<ref bean="watcher1"/>
				<ref bean="watcher2"/>
			</set>
		</property>
		
	</bean>

	<!-- OPTIONAL OBJECT (MBEAN) OBSERVERS -->

	<!-- First watched property: used memory, checked every 5 sec -->
	<!-- Event's name: "java.memory", the event's payload will be a number -->
	
	<bean id="watcher1" class="services.moleculer.jmx.ObjectWatcher">
		<property name="objectName"    value="java.lang:type=Memory" />
		<property name="attributeName" value="HeapMemoryUsage" />
		<property name="path"          value="used" />
		<property name="event"         value="java.memory" />
		<property name="broadcast"     value="true" />
		<property name="groups"        value="" />
	</bean>

	<!-- Second watched object: classloader's status, checked every 5 sec -->
	<!-- Event's name: "java.classloader", the payload will be a JSON structure -->
	
	<bean id="watcher2" class="services.moleculer.jmx.ObjectWatcher">
		<property name="objectName"    value="java.lang:type=ClassLoading" />
		<property name="event"         value="java.classloader" />
		<!-- There are no "attributeName" and "path" properties -->
		<property name="broadcast"     value="false" />
		<property name="groups"        value="group1,group2" />
	</bean>
				
</beans>